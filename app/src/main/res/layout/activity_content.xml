    <!-- 下面的"标题" -->
    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@mipmap/bottom_tab_bg"
        android:gravity="center"
        android:orientation="horizontal" >

        <!-- android:drawableTop="@drawable/tab_home_selector"  图片选择器
             android:checked="true" 默认选中
         -->
        <RadioButton
            android:id="@+id/rb_home"
            style="@style/Bottom_Tab_Style"
            android:drawableTop="@drawable/tab_home_selector"
            android:checked="true"
            android:text="首页" />

        <RadioButton
            android:id="@+id/rb_mine"
            style="@style/Bottom_Tab_Style"
            android:drawableTop="@drawable/tab_mine_selector"
            android:text="我的" />

        <RadioButton
            android:id="@+id/rb_shopping"
            style="@style/Bottom_Tab_Style"
            android:drawableTop="@drawable/tab_shopping_selector"
            android:text="商城" />

        <RadioButton
            android:id="@+id/rb_other"
            style="@style/Bottom_Tab_Style"
            android:drawableTop="@drawable/tab_setting_selector"
            android:text="其他" />

    </RadioGroup>
