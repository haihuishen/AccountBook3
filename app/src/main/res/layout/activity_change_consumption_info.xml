<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:background="@mipmap/bg_image3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/title_bar" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user"
                android:paddingLeft="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#000000"
                android:textSize="25dp"
                android:background="@drawable/bg_bule"
                android:hint="用户"/>

            <TextView
                android:id="@+id/tv_Time"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#000000"
                android:textSize="25dp"
                android:background="@drawable/bg_pink"
                android:hint="消费时间"/>
            <TextView
                android:id="@+id/tv_Options"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#000000"
                android:textSize="25dp"
                android:background="@drawable/bg_pink"
                android:hint="消费类型"/>

            <com.shen.accountbook3.ui.view.ClearEditText
                android:id="@+id/et_concreteness"
                android:layout_marginTop="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/delete"
                android:background="@drawable/bg_et_translucent"
                android:hint="具体名称(可不填)"
                android:textSize="25dp"
                android:textCursorDrawable="@null"/>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="30dp"
                android:background="@drawable/bg_bule">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="22dp"
                    android:text="总价: "/>
                <EditText
                    android:id="@+id/et_price"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textColor="#000000"
                    android:textSize="22dp"
                    android:inputType="numberDecimal"
                    android:ems="10"
                    android:background="@color/translucent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="22dp"
                    android:text="单价: "/>
                <com.shen.accountbook3.ui.view.ClearEditText
                    android:id="@+id/et_unitPrice"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:inputType="numberDecimal"
                    android:drawableRight="@mipmap/delete"
                    android:background="@drawable/bg_et_translucent"
                    android:textSize="22dp"
                    android:textCursorDrawable="@null"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="22dp"
                    android:text="数量: "/>
                <com.shen.accountbook3.ui.view.ClearEditText
                    android:id="@+id/et_number"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:drawableRight="@mipmap/delete"
                    android:background="@drawable/bg_et_translucent"
                    android:textSize="22dp"
                    android:textCursorDrawable="@null"/>
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/linearLayout_pv"
                    android:padding="2dp"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/bg_text_translucent">
                    <com.bm.library.PhotoView
                        android:id="@+id/pv_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_text_translucent"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/btn_camera"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="拍照"
                        android:textColor="@drawable/btn_text_color_w_b"
                        android:background="@drawable/btn_bg_transparency"
                        />
                    <Button
                        android:layout_marginTop="5dp"
                        android:id="@+id/btn_photo"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="相册"
                        android:textColor="@drawable/btn_text_color_w_b"
                        android:background="@drawable/btn_bg_transparency"
                        />
                    <Button
                        android:layout_marginTop="5dp"
                        android:id="@+id/btn_clear"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="清除"
                        android:textColor="@drawable/btn_text_color_w_b"
                        android:background="@drawable/btn_bg_transparency"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/btn_add"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:text="添加"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_bg_pink_stroke_black"
                />

        </LinearLayout>

    </LinearLayout>
    <View
        android:id="@+id/v_Masker"
        android:visibility="gone"
        android:background="#e0000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e0000000" />

        <com.bm.library.PhotoView
            android:id="@+id/img"
            android:scaleType="fitCenter"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

</RelativeLayout>
